{{#partial "content"}}

    <h1>Add a new Squad!</h1>

    <form action="created-squad" method="post" class="well">
        <label for="squadName">Squad Name</label><br>
        <input id="squadName" name="squadName" type="text" class="input-field">
        <br>

        <label for="description">Squad Cause</label><br>
        <input id="description" name="description" type="text" class="input-field">
        <br>

        <label for="size">Number of People</label><br>
        <input id="size" name="size" type="text" class="input-field">
        <br>
        <button type="submit" class="btn btn-default">Add New Squad</button>
    </form>
{{/partial}}

